<div class="container justify-content-center my-5">
  <div class="row justify-content-center text-center my-5">
    <h1 class="col-8">Register Acount</h1>
  </div>
  <form action="/login/register" class="row justify-content-center" autocomplete="chrome-off" method="POST">
    {{!-- user name --}}
    <div class="form-group col-8 mb-5 text-center">
      <label for="passwordInput">User Name</label>
      <input name="firstName" value="{{#if firstName}}{{firstName}}{{/if}}" class="form-control" id="passwordInput" required>
    </div>
    {{!-- user email --}}
    <div class="form-group col-8 mb-5 text-center">
      <label for="emailInput">Email address</label>
      <input name="email" type="email" value="{{#if email}}{{email}}{{/if}}" class="form-control {{#if emailExist}}is-invalid{{/if}}" id="emailInput" aria-describedby="emailHelp" autocomplete="chrome-off"  required>
      <small id="emailHelp" class="form-text text-muted">We'll never share your email with anyone else.</small>
      {{#if emailExist}}
        <div class="invalid-feedback">
          The email: "{{email}}" has been registered.
        </div>
      {{/if}}
    </div>
    {{!-- user password --}}
    <div class="form-group col-8 mb-5 text-center">
      <label for="passwordInput">Password</label>
      <input name="password" type="password" class="form-control" id="passwordInput" autocomplete="chrome-off"  required>
    </div>
    {{!-- user password reconfirm --}}
    <div class="form-group col-8 mb-5 text-center">
      <label for="passwordReconfirmInput">Reconfirm Password</label>
      <input name="passwordReconfirm" type="password" class="form-control {{#if passwordRetry}}is-invalid{{/if}}" id="passwordReconfirmInput" autocomplete="chrome-off"  required>
      {{#if passwordRetry}}
        <div class="invalid-feedback">
          Please type in the correct password.
        </div>
      {{/if}}
    </div>
    {{!-- submit --}}
    <div class="form-group col-8 text-center">
      <button type="submit" class="btn btn-primary">Register</button>
    </div>
    {{!-- back to login --}}
    <div class="form-group col-8 text-center">
      <a href="/login" class="btn-sm btn-outline-secondary">Back</a>
    </div>
  </form>
</div>
